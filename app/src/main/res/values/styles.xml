<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MainActivity Custom Theme -->
    <style name="MainActivityCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/navigationbar_bg</item>
    </style>

    <!-- MainActivity SearchView Custom Theme -->
    <style name="SearchViewCustomTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sv_search_item_text_size</item>
    </style>

</resources>
